<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PilgrimageTour" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_yellow_theme</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_yellow_theme</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Slider">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>

    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize the background color of the dialog -->


        <!-- Customize the color of the title and message text -->
        <item name="android:textColorPrimary">#000000</item>


        <item name="buttonTint">#E7C314</item>
    </style>


    <style name="PackageTabItems" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">

        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="IncExcTabItems" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">

        <item name="textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ExtendedFAB">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Circular" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">

        <item name="android:maxHeight">30dp</item>
        <item name="height">25dp</item>
        <item name="android:height">25dp</item>

    </style>

    <style name="TabItems" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">

        <item name="textAllCaps">false</item>
        <item name="android:textSize">10dp</item>

    </style>

    <style name="AppDatePickerTheme" parent="Widget.MaterialComponents.MaterialCalendar">
        <!-- Customize the background color -->
        <item name="android:background">@color/primary_yellow_theme</item>
        <!-- Add more customizations as needed -->
    </style>


    <style name="SearchView" parent="Widget.AppCompat.SearchView">

        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:tint">@color/black</item>

    </style>

</resources>
