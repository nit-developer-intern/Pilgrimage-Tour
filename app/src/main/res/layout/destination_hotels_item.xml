<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:animateLayoutChanges="true"
    android:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mCVHotel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Destination Image -->
            <ImageView
                android:id="@+id/iVdestination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="HotelImage"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/iVdestination"
                android:layout_alignTop="@id/iVdestination"
                android:layout_alignEnd="@id/iVdestination"
                android:layout_alignBottom="@id/iVdestination"
                android:src="@color/black_50" />
            <!-- Destination Text -->
            <TextView
                android:id="@+id/destinationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/iVdestination"
                android:layout_alignEnd="@id/iVdestination"
                android:layout_centerInParent="true"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:text="Badrinath"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>