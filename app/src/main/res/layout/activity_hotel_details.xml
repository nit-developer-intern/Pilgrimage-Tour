<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HotelDetailsActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cLActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mCVBottom"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true"
        tools:visibility="visible">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/aBL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/cTL"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:animateLayoutChanges="true"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll"
                app:titleEnabled="false">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:cardBackgroundColor="@color/off_white_ddd"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:layout_collapseMode="parallax">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true">
                        <!--
                                                <ImageView
                                                    android:id="@+id/iVTop"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:background="@drawable/placeholder"
                                                    android:fitsSystemWindows="true"
                                                    android:scaleType="fitXY"
                                                    android:src="@drawable/placeholder"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent" />
                        -->
                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/vPSlider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/placeholder"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/iVTopFilter"-->
                        <!--                            android:layout_width="0dp"-->
                        <!--                            android:layout_height="0dp"-->
                        <!--                            android:scaleType="fitXY"-->
                        <!--                            android:src="@color/black_25"-->
                        <!--                            app:layout_constraintBottom_toBottomOf="@id/vPSlider"-->
                        <!--                            app:layout_constraintEnd_toEndOf="@id/vPSlider"-->
                        <!--                            app:layout_constraintStart_toStartOf="@id/vPSlider"-->
                        <!--                            app:layout_constraintTop_toTopOf="@id/vPSlider" />-->

                        <TextView
                            android:id="@+id/tVName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/vPSlider"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="Hotel Name" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/mT"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll"
                    app:navigationIcon="@drawable/ic_outline_arrow_back_24" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:tabBackground="@color/white"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/primary_yellow_theme"
                app:tabIndicatorFullWidth="true"
                app:tabMaxWidth="0dp"
                app:tabMinWidth="100dp"
                app:tabMode="auto"
                app:tabRippleColor="@color/primary_yellow_theme"
                app:tabSelectedTextColor="@color/black"
                app:tabTextAppearance="@style/PackageTabItems"
                app:tabTextColor="@color/gray">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facilities" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SightSeeing" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Packages" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel Enquiry" />
            </com.google.android.material.tabs.TabLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sVFragmentPackageDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipToPadding="false"

            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@color/white">

                <View
                    android:id="@+id/viewLineTop"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tVOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Overview"
                    android:textColor="@color/primary_yellow_theme"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewLineTop" />

                <TextView
                    android:id="@+id/tVOverviewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:focusableInTouchMode="true"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tVOverview"
                    tools:lines="1"
                    tools:text="Adi Guru Shankaracharya established Joshimath in the 8th century. It is the abode of Lord Badrinath during the winter season when the roads to Shri Badrinath Dham are closed. Besides this, Joshimath has the admirable raw beauty of nature that lies scattered everywhere." />

                <TextView
                    android:id="@+id/tVReadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:clickable="true"
                    android:drawableTint="@color/primary_yellow_theme"
                    android:focusable="true"
                    android:paddingHorizontal="8dp"
                    android:text="Read More"
                    android:textColor="@color/primary_yellow_theme"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tVOverviewText" />

                <TextView
                    android:id="@+id/tVReadLess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:clickable="true"
                    android:drawableTint="@color/primary_yellow_theme"
                    android:paddingHorizontal="8dp"
                    android:text="Read Less"
                    android:textColor="@color/primary_yellow_theme"
                    android:textSize="14dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tVOverviewText" />

                <View
                    android:id="@+id/viewLineOverItinerary"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintTop_toBottomOf="@id/tVReadMore" />

                <TextView
                    android:id="@+id/tVFacilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Facilities"
                    android:textColor="@color/primary_yellow_theme"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewLineOverItinerary" />

                <View
                    android:id="@+id/viewLineItinerary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tVFacilities" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rVFacilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/viewLineItinerary"
                    app:spanCount="2"
                    tools:itemCount="3"
                    tools:listitem="@layout/facilities_item" />

                <View
                    android:id="@+id/viewLineUnderFacilities"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintTop_toBottomOf="@id/rVFacilities" />

                <TextView
                    android:id="@+id/tVSightseeing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:paddingTop="8dp"
                    android:text="Places to visit "
                    android:textColor="@color/primary_yellow_theme"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rVFacilities" />

                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tVSightseeing" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rVPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/viewLine"
                    app:spanCount="2"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_places_destination" />

                <View
                    android:id="@+id/vLineOverPackages"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintTop_toBottomOf="@id/rVPlaces" />

                <TextView
                    android:id="@+id/tVPackages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Packages "
                    android:textColor="@color/primary_yellow_theme"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vLineOverPackages" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rVPackages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tVPackages"
                    tools:listitem="@layout/trending_packages_item" />

                <View
                    android:id="@+id/viewLineOverWriteReview"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintTop_toBottomOf="@id/rVPackages" />

                <FrameLayout
                    android:id="@+id/fLWriteReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintTop_toBottomOf="@id/rVPackages">

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/eFABWriteReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Write a Review"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_yellow_theme"
                        android:textSize="16sp"
                        app:shapeAppearanceOverlay="@style/ExtendedFAB" />


                </FrameLayout>


                <View
                    android:id="@+id/viewLineUnderReviewButton"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/off_white_ddd"
                    app:layout_constraintTop_toBottomOf="@id/fLWriteReview" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rVReviewsHotels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewLineUnderReviewButton"
                    tools:itemCount="0"
                    tools:listitem="@layout/hotel_review_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mCVBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="16dp"
        app:strokeColor="@color/off_white_ddd"
        app:strokeWidth="0dp"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@drawable/gradient">
            <!--<TextView
                android:id="@+id/tVYouPayCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="₹"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="₹10,000" />

            <TextView
                android:id="@+id/tVWithTaxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="(with taxes)"
                android:textColor="@color/off_black_444"
                android:textSize="14dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/tVYouPayCost"
                app:layout_constraintStart_toEndOf="@id/tVYouPayCost"
                app:layout_constraintTop_toTopOf="@id/tVYouPayCost" />

            <TextView
                android:id="@+id/tVShowBreakup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="Show breakup"
                android:textColor="@color/blue_google"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tVYouPayCost" />-->
            <TextView
                android:id="@+id/mCVtVMrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="₹ "
                android:textColor="@color/off_black_444"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="₹10,000" />

            <TextView
                android:id="@+id/mCVtVDiscounted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:maxLength="11"
                android:maxLines="1"
                android:text="₹"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mCVtVMrp"
                tools:text="₹10,000" />

            <TextView
                android:id="@+id/tVPerPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="(Per Night)"
                android:textColor="@color/off_black_444"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@id/mCVtVDiscounted"
                app:layout_constraintStart_toEndOf="@id/mCVtVDiscounted"
                app:layout_constraintTop_toTopOf="@id/mCVtVDiscounted" />

            <!--
                        <Button
                            android:id="@+id/buttonContinueBooking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/orange_theme"
                            android:gravity="center"
                            android:text="Book Now"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/ExtendedFAB" />
            -->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/buttonContinueBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                app:cardBackgroundColor="@color/primary_yellow_theme"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="Proceed"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="to booking"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/iVLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient"
        android:visibility="visible"
        tools:visibility="gone" />

    <ProgressBar
        android:id="@+id/pBLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progress="100"
        android:progressTint="@color/red_theme" />

</RelativeLayout>
