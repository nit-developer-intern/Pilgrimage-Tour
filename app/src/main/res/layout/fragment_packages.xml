<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_ddd"
    tools:context=".view.PackagesFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/sVFragmentPackages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/eFABPlanHoliday">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/tVAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="All Packages"
                android:textColor="@color/off_white_ddd"
                android:textSize="14dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rVFragmentPackages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tVAll"
                tools:listitem="@layout/packages_list_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/eFABPlanHoliday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_toStartOf="@id/fABWhatsapp"
        android:backgroundTint="@color/primary_yellow_theme"
        android:gravity="center"
        android:text="Plan Your Yatra"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:shapeAppearanceOverlay="@style/ExtendedFAB" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fABWhatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/eFABPlanHoliday"
        android:layout_alignBottom="@id/eFABPlanHoliday"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Whatsapp"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_whatsapp_24"
        app:backgroundTint="#25D366"
        app:fabCustomSize="48dp"
        app:fabSize="normal"
        app:maxImageSize="36dp"
        app:shapeAppearanceOverlay="@style/ExtendedFAB"
        app:tint="#ffffff" />

    <TextView
        android:id="@+id/tV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/no_matches"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>
