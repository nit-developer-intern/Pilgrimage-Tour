<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="1dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/off_white_ddd"
    app:strokeWidth="1dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cLCustomerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tVCustomerHeading"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Adult 1"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:background="@color/primary_yellow_theme"
            app:layout_constraintBottom_toBottomOf="@id/mCVCustomerNAme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/mCVCustomerNAme" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mCVCustomerNAme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            android:paddingVertical="8dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tVCustomerHeading"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/off_white_ddd"
            app:strokeWidth="1dp">

            <EditText
                android:id="@+id/tIETCustomerNAme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:background="@color/white"
                android:hint="Name"
                android:padding="1dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mCVCustomerGender"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/mCVCustomerAge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/mCVCustomerAge"
            app:strokeColor="@color/off_white_ddd"
            app:strokeWidth="1dp">
            <!--
                    <AutoCompleteTextView
                        android:id="@+id/aCTVGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        app:simpleItems="@array/gender_items" />
            -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/iVGender"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_down"
                    app:tint="@color/off_white_999" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mCVCustomerAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingVertical="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/mCVCustomerWeight"
            app:layout_constraintStart_toEndOf="@id/mCVCustomerGender"
            app:layout_constraintTop_toBottomOf="@id/tVCustomerHeading"
            app:strokeColor="@color/off_white_ddd"
            app:strokeWidth="1dp">

            <EditText
                android:id="@+id/tIETCustomerAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:background="@color/white"
                android:hint="Age"
                android:inputType="number"
                android:padding="1dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />
            <!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tILCustomerAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Age"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/mCVCustomerNAme">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tIETCustomerAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:inputType="number"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:textStyle="normal" />

                        </com.google.android.material.textfield.TextInputLayout>
            -->
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mCVCustomerWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mCVCustomerAge"
            app:layout_constraintTop_toBottomOf="@id/mCVCustomerNAme"
            app:strokeColor="@color/off_white_ddd"
            app:strokeWidth="1dp">

            <EditText
                android:id="@+id/tIETCustomerWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:background="@color/white"
                android:hint="Weight (in KG)"
                android:inputType="number"
                android:padding="1dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />
            <!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tILCustomerWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Weight"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/mCVCustomerNAme">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tIETCustomerWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:inputType="number"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:textStyle="normal" />

                        </com.google.android.material.textfield.TextInputLayout>
            -->
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
