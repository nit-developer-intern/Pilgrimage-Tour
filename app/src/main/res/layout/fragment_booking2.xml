<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/transparent"
    tools:context=".view.BookingFragment2">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sVBooking2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mCVBottom"
        android:fitsSystemWindows="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/lLBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_yellow_theme"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iVBackArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_outline_arrow_back_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tVBooking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Your Booking "
                    android:fontFamily="@font/andika"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mCVCustomerBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/lLBooking"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cLBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/gradient4">


                    <LinearLayout
                        android:id="@+id/llBookingDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/iVCustomer_Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:src="@drawable/ic_cust_details"
                            app:tint="@color/primary_yellow_theme" />

                        <TextView
                            android:id="@+id/tVCustomerBooking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="Customer Booking Details"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="*"
                            android:textColor="@color/primary_yellow_theme"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rVAdults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/llBookingDetails"
                        tools:itemCount="2"
                        tools:listitem="@layout/customer_details_item" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rVChildren"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rVAdults"
                        tools:itemCount="2"
                        tools:listitem="@layout/customer_details_item" />

                    <LinearLayout
                        android:id="@+id/llAddressforComm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rVChildren">

                        <ImageView
                            android:id="@+id/iVDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:src="@drawable/ic_description"
                            app:tint="@color/primary_yellow_theme" />

                        <TextView
                            android:id="@+id/tVAddressComm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="Address for Communication"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="*"
                            android:textColor="@color/primary_yellow_theme"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mCVLeadTravllerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/white"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/llAddressforComm"
                        app:strokeColor="@color/off_white_ddd"
                        app:strokeWidth="1dp">


                        <EditText
                            android:id="@+id/tIETLeadTravellerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="8dp"
                            android:background="@color/white"
                            android:hint="Lead Traveller Name*"
                            android:inputType="text"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal" />


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mCVLeadIDType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/mCVLeadIDNumber"
                        app:layout_constraintEnd_toStartOf="@+id/mCVLeadIDNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mCVLeadIDNumber"
                        app:strokeColor="@color/off_white_ddd"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:id="@+id/lLID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:animateLayoutChanges="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <Spinner
                                android:id="@+id/spinnerIDType"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="start"
                                android:padding="2dp"
                                android:spinnerMode="dialog" />

                            <ImageView
                                android:id="@+id/iVID"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="1dp"
                                android:src="@drawable/ic_down" />

                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mCVLeadIDNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/mCVLeadIDType"
                        app:layout_constraintTop_toBottomOf="@id/mCVLeadTravllerName"
                        app:strokeColor="@color/off_white_ddd"
                        app:strokeWidth="1dp">


                        <EditText
                            android:id="@+id/tIETLeadIDNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:background="@color/white"
                            android:hint="ID Number*"
                            android:inputType="number"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal" />


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mCVLeadTravellerEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mCVLeadIDNumber"
                        app:strokeColor="@color/off_white_ddd"
                        app:strokeWidth="1dp">


                        <EditText
                            android:id="@+id/tIETLeadTravellerEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="6dp"
                            android:background="@color/white"
                            android:hint="Lead Traveller Email*"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal" />


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mCVLeadTravellerPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mCVLeadTravellerEmail"
                        app:strokeColor="@color/off_white_ddd"
                        app:strokeWidth="1dp">


                        <EditText
                            android:id="@+id/tIETLeadTravellerPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:background="@color/white"
                            android:hint="Mobile Number*"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal" />


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mCVLeadTravelleAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mCVLeadTravellerPhone"
                        app:strokeColor="@color/off_white_ddd"
                        app:strokeWidth="1dp">


                        <EditText
                            android:id="@+id/tIETLeadTravellerAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:background="@color/white"
                            android:hint="Full Address"
                            android:inputType="textPostalAddress"
                            android:maxLines="1"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mCVLeadDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/mCVLeadCity"
                        app:layout_constraintEnd_toStartOf="@+id/mCVLeadCity"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mCVLeadCity"
                        app:strokeColor="@color/off_white_ddd"
                        app:strokeWidth="1dp">

                        <EditText
                            android:id="@+id/tIETLeadDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:background="@color/white"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Arrival Date"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal" />
                        <!--
                                                <com.google.android.material.textfield.TextInputLayout
                                                    android:id="@+id/tILLeadDate"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:hint="Arrival Date"
                                                    app:layout_constraintTop_toBottomOf="@id/tILLeadAddress">

                                                    <com.google.android.material.textfield.TextInputEditText
                                                        android:id="@+id/tIETLeadDate"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:backgroundTint="@color/white"
                                                        android:inputType="date"
                                                        android:paddingVertical="4dp"
                                                        android:textColor="@color/black"
                                                        android:textSize="14dp"
                                                        android:textStyle="normal" />

                                                </com.google.android.material.textfield.TextInputLayout>
                            -->
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mCVLeadCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/mCVLeadDate"
                        app:layout_constraintTop_toBottomOf="@id/mCVLeadTravelleAddress"
                        app:strokeColor="@color/off_white_ddd"
                        app:strokeWidth="1dp">

                        <EditText
                            android:id="@+id/tIETLeadCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:background="@color/white"
                            android:hint="Arrival City"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal" />
                        <!--
                                                <com.google.android.material.textfield.TextInputLayout
                                                    android:id="@+id/tILLeadDate"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:hint="Arrival Date"
                                                    app:layout_constraintTop_toBottomOf="@id/tILLeadAddress">

                                                    <com.google.android.material.textfield.TextInputEditText
                                                        android:id="@+id/tIETLeadDate"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:backgroundTint="@color/white"
                                                        android:inputType="date"
                                                        android:paddingVertical="4dp"
                                                        android:textColor="@color/black"
                                                        android:textSize="14dp"
                                                        android:textStyle="normal" />

                                                </com.google.android.material.textfield.TextInputLayout>
                            -->
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mCVadditionalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mCVLeadDate"
                        app:layout_constraintBottom_toBottomOf="parent"
                    app:strokeColor="@color/off_white_ddd"
                    app:strokeWidth="1dp">


                        <EditText
                            android:id="@+id/tIETAdditionalInfo"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:background="@color/white"
                            android:gravity="start"
                            android:hint="Any pickup details/Additional Information*"
                            android:inputType="textMultiLine"
                            android:paddingVertical="4dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal" />

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/tVBookingSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Booking Summary"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_summary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mCVCustomerBooking"/>

            <TextView
                android:id="@+id/tVBookingPackageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mathura Vrindavan Tour - 5 Days"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tVBookingSummary"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/viewLineunderPackageName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="4dp"
                android:background="@color/off_white_ddd"
                app:layout_constraintTop_toBottomOf="@id/tVBookingPackageName"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tVTravelDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewLineunderPackageName"
                android:text="Travel Date:" />

            <TextView
                android:id="@+id/chosenDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="15 December, 2023"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/viewLineunderPackageName" />

            <TextView
                android:id="@+id/tVNumofPerson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tVTravelDate"
                android:text="Number of Persons : " />

            <TextView
                android:id="@+id/chosenNumofPerson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="start"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/tVTravelDate"
                android:text=": ₹1" />

            <View
                android:id="@+id/viewLineunderNumofPerson2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="8dp"
                android:background="@color/off_white_ddd"
                app:layout_constraintTop_toBottomOf="@id/chosenNumofPerson"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/YouPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="You Pay"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewLineunderNumofPerson2" />

            <TextView
                android:id="@+id/tVYouPay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=": ₹1"
                android:textColor="@color/blue_google"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="@id/YouPay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/YouPay"
                app:layout_constraintStart_toStartOf="@id/guideline"/>

            <TextView
                android:id="@+id/tVAmtduelater"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Amount Due later"
                android:textStyle="bold"
                android:textColor="@color/off_white_999"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tVYouPay" />

            <TextView
                android:id="@+id/tVAmtduelaterCost"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=": ₹1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="@id/tVAmtduelater"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tVAmtduelater"
                app:layout_constraintStart_toStartOf="@id/guideline"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mCVBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="1dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/off_white_ddd"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@drawable/gradient4">

            <TextView
                android:id="@+id/tVYouPayCostBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="₹"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="₹10,000" />

            <TextView
                android:id="@+id/tVShowBreakup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Advance Payment"
                android:textColor="@color/blue_google"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tVYouPayCostBottom" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/buttonContinuePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                app:cardBackgroundColor="@color/primary_yellow_theme"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="Proceed"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="to Payment"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

