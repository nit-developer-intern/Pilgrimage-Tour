<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:id="@+id/iV"
        app:layout_constraintTop_toTopOf="@id/tVGuid"
        app:layout_constraintBottom_toBottomOf="@id/tVGuid"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_guidelines" />

    <TextView
        android:id="@+id/tVGuid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Carrying of AADHAR CARD is a must for all Indians, whereas foreign nationals require a passport."
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iV"/>

</androidx.constraintlayout.widget.ConstraintLayout>
